{%- extends 'base.njk' -%}
{%- block content -%}

<main>
    <h1>{{ title }}</h1>
    {{ content | safe }}
</main>

<nav aria-labelled-by="localnavtitle">
    <h1 id="localnavtitle">{{sectionTitle}} Sections</h1>
    <ul>
        {# populate the list from the page data "nav" property #}
        {%- for item in nav -%}
        <li><a href="{{ item.url | url }}">{{item.label}}</a></li>
        {%- endfor -%}
    </ul>
</nav>

{%- endblock -%}
